{% extends 'layout.html.twig' %}

{#{% set _sc = '@survos/tree-bundle/tree' %}#}
    {% set _sc = 'jstree' %}

{% block title %}Directory Demo, uses twig-tree-tag, {{ _sc }}{% endblock %}

{% block body %}
    <span class="bi-alarm"></span>
    <h3>{{ block('title') }}</h3>

    <div
            {{ stimulus_controller(_sc, {
                "types" : {
                    "default" : {
                        "icon" : "bi-alarm"
                    },
                    "php" : {
                        "icon" : "bi bi-filetype-php"
                    },
                    "json" : {
                        "icon" : "bi bi-filetype-json"
                    },
                    "js" : {
                        "icon" : "bi bi-filetype-js"
                    },
                    "yaml" : {
                        "icon" : "bi bi-filetype-yaml"
                    },
                    "css" : {
                        "icon" : "bi bi-filetype-css"
                    },
                    "dir" : {
                        "icon" : "bi bi-arrow-down-right-square"
                    },
                    "demo" : {
                        "icon" : "glyphicon glyphicon-ok"
                    }
                },
                plugins: ['search', 'sort', 'types']
            }) }}
    >

        <input
                {{ stimulus_action(_sc, 'search') }}
                type="text"
                value="" class="input" style="margin:0em auto 1em auto; display:block; padding:4px; border-radius:4px; border:1px solid silver;" />

        <div             {{ stimulus_target(_sc, 'html') }}>

        {% tree e in entities %}
                {% if treeloop.first %}<ul>{% endif %}
                <li data-jstree='{"type":"{{ e.isDir ? 'dir' : e.extension }}"}'>
{#                        {{ treeloop.level }}#}
                        {{ e.name }}
                    <sup>{{ e.isDir ? e.childCount }}</sup>
{#                    <a href="#{{ e.id }}">#}
{#                    </a>#}
                    {% subtree e.children %}
                </li>
                {% if treeloop.last %}</ul>{% endif %}
            {% endtree %}
    </div>

    </div>


