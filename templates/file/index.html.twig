{% extends 'base.html.twig' %}

    {% block title %}Directory Demo, uses twig-tree-tag{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {#{% set _sc = '@survos/tree-bundle/tree' %}#}


        <div class="row">
            <div class="col-md-5">
                <h3>Component api_tree {{ fileClass }}</h3>
                <div class="">
                    {% component api_tree with {
                        class: fileClass,
                    } %}
                    {% endcomponent %}
                </div>
            </div>
            <div class="col-md-7">
                {% set _sc = 'topic' %}
                <div {{ stimulus_controller(_sc) }}>
                    <h3 {{ stimulus_target(_sc, 'title') }}>TOPIC title</h3>
                    <div {{ stimulus_target(_sc, 'results') }}>TOPIC results</div>
                </div>
            </div>
        </div>


</div>
{% endblock %}
