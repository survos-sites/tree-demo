{% extends "topic/base.html.twig" %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ topic.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ topic.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ topic.description }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ topic.lft }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ topic.lvl }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ topic.rgt }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('topic_edit', topic.rp) }}">edit</a>
    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
